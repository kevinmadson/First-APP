<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.aula01.aula01.SegundaActivity">
    <ImageView
        android:id="@+id/vistoverde"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/visto" />

    <TextView
        android:id="@+id/texto_confirmedados"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/vistoverde"
        android:layout_marginLeft="140dp"
        android:layout_alignBottom="@id/vistoverde"
        android:layout_marginBottom="20dp"
        android:text="Cadastrado \ncom sucesso!!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#006400" />

    <TextView
        android:id="@+id/texto_variavel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/vistoverde"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Nome"
        android:textSize="20sp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/texto_variavel2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/vistoverde"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:text="Email"
        android:textSize="20sp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/texto_variavel3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/vistoverde"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:text="Senha"
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/texto_tipo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/vistoverde"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:text="Tipo"
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/texto_spinner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/vistoverde"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="20dp"
        android:text="Curso"
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/text_view_id5"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="150dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:text="\n Kevin Madson"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/text_view_id6"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="115dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:text="\n {   }"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000080" />

</RelativeLayout>
